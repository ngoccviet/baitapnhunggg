
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Hệ thống giám sát</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome (bản không dùng integrity) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        .navbar-custom {
            background-color: #6a5acd;
            color: white;
        }

            .navbar-custom a {
                color: white;
                font-weight: bold;
                transition: color 0.2s;
                text-decoration: none; /* Bỏ gạch chân mặc định */
            }

            .navbar-custom .nav-link:hover,
            .navbar-custom .nav-link:focus,
            .navbar-custom .right-section a:hover {
                color: #ffc107;
                text-decoration: none; /* Không có gạch chân khi hover */
            }

            .navbar-custom .navbar-brand {
                pointer-events: none;
                color: white;
                font-weight: bold;
                text-decoration: none;
            }

            .navbar-custom .nav-link.active {
                background-color: #ffc107; /* nền vàng */
                color: black !important; /* chữ đen */
                pointer-events: none; /* không cho bấm */
                border-radius: 5px;
            }

        .control-panel {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .navbar-icon {
            margin-right: 5px;
        }

        .navbar-nav-center {
            flex: 1;
            justify-content: center;
        }

        .right-section a {
            color: white;
            text-decoration: none;

        }
    </style>
</head>
<body>
    <!-- Thanh menu -->
    <nav class="navbar navbar-expand-lg navbar-custom px-4 d-flex justify-content-between align-items-center">
        <!-- Logo và tiêu đề bên trái -->
        <a class="navbar-brand d-flex align-items-center" href="#">
            <img src="~/images/logo.png" height="40" alt="Logo" />
            <span class="ms-2">HỆ THỐNG GIÁM SÁT</span>
        </a>

        <!-- Menu chính giữa -->
        <ul class="navbar-nav navbar-nav-center d-flex flex-row gap-3">
            <li class="nav-item">
                 <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "mainprogram" ? "active" : "")" 
                    asp-controller="Home" asp-action="mainprogram">Trang chủ</a> 
            </li>
            <li class="nav-item">
                 <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "history" ? "active" : "")" 
                    asp-controller="Home" asp-action="History">Tra cứu lịch sử</a> 
                
            </li>
            <li class="nav-item">
                 <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "about" ? "active" : "")" 
                  asp-controller="Home" asp-action="About">Giới thiệu</a> 
            </li>
        </ul>

        <!-- Đồng hồ + Cài đặt + Đăng xuất bên phải -->
        <div class="text-end text-white d-flex align-items-center gap-3 right-section">
            <span class="d-flex align-items-center">
                <i class="fas fa-clock navbar-icon"></i>
                <span id="clock">--:--:--</span>
            </span>
            <a class="d-flex align-items-center" asp-controller="Home" asp-action="Settings">
                <i class="fas fa-cog navbar-icon"></i>Cài đặt
            </a>
            <a class="d-flex align-items-center" asp-controller="Home" asp-action="Logout">
                <i class="fas fa-sign-out-alt navbar-icon"></i>Đăng Xuất
            </a>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- Panel điều khiển cố định -->

        <!-- Nội dung thay đổi -->
        <div class="main-content">
            @RenderBody()
        </div>
    </div>

    <!-- Script cập nhật đồng hồ -->
    <script>
        function updateClock() {
            const now = new Date();
            const time = now.toLocaleTimeString('vi-VN', { hour12: false });
            const date = now.toLocaleDateString('vi-VN');
            document.getElementById('clock').textContent = `${time} | ${date}`;
        }

        updateClock();
        setInterval(updateClock, 1000);
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
