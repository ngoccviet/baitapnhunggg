@{
    ViewData["Title"] = "Tra cứu lịch sử";
}

<div class="container mt-4">
    <h4 class="text-warning fw-bold">Tra Cứu Lịch Sử <i class="fas fa-wave-square"></i></h4>

    <!-- Bộ lọc -->
    <div class="row mb-3">
        <div class="col-md-4">
            <div class="border p-3 rounded bg-light">
                <h6 class="text-success fw-bold">Bộ lọc</h6>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="filterTemp" />
                    <label class="form-check-label" for="filterTemp">Lọc theo nhiệt độ</label>
                </div>
                <div class="input-group">
                    <input type="number" class="form-control" placeholder="Từ" />
                    <input type="number" class="form-control" placeholder="Đến" />
                </div>
                <div class="form-check mt-2">
                    <input class="form-check-input" type="checkbox" id="filterVib" />
                    <label class="form-check-label" for="filterVib">Lọc theo độ rung</label>
                </div>
                <div class="input-group">
                    <input type="number" class="form-control" placeholder="Từ" />
                    <input type="number" class="form-control" placeholder="Đến" />
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <label class="fw-bold">Thời Gian</label>
            <input type="date" class="form-control mb-2" />
            <input type="date" class="form-control" />
        </div>

        <div class="col-md-4">
            <label class="fw-bold">Trạng thái thiết bị</label>
            <select class="form-select">
                <option>Tất cả</option>
                <option>Báo Động</option>
                <option>Cần kiểm tra</option>
            </select>
        </div>
    </div>

    <div class="mb-3">
        <button class="btn btn-primary">Tìm kiếm</button>
        <button class="btn btn-outline-secondary">Bỏ lọc</button>
    </div>

    <!-- Bảng dữ liệu -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>DeviceID</th>
                    <th>Tên Thiết Bị</th>
                    <th>Ngày Sản Xuất</th>
                    <th>Ngưỡng Nhiệt Độ</th>
                    <th>Ngưỡng Độ Rung</th>
                    <th>Vibration</th>
                    <th>Temperature</th>
                    <th>Timestamp</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @* Loop dữ liệu từ model *@
                <tr>
                    <td>1</td>
                    <td>Động cơ robot</td>
                    <td>01/01/2023</td>
                    <td>80</td>
                    <td>3.7</td>
                    <td>8.04</td>
                    <td>128</td>
                    <td>06/04/2025 08:34</td>
                    <td>Báo Động</td>
                </tr>
                <!-- ... -->
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-end gap-2">
        <button class="btn btn-warning">Xuất files</button>
        <button class="btn btn-danger">Xóa lịch sử</button>
    </div>
</div>
