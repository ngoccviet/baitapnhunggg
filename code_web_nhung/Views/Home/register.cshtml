@{
    ViewData["Title"] = "Đăng Ký";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f2f2f2;
        }

        .register-box {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            max-width: 500px;
            margin: auto;
        }

        .btn-custom {
            background-color: #007bff;
            color: yellow;
            font-weight: bold;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }

        .logo {
            max-width: 100px;
            margin-bottom: 15px;
        }

        h2, h3 {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="text-center">
            <img src="~/images/logo.png" alt="Logo" class="logo" />
            <h2>TRƯỜNG ĐẠI HỌC GIAO THÔNG VẬN TẢI PHÂN HIỆU TP.HCM</h2>
        </div>

        <div class="register-box mt-4">
            <h3 class="text-info text-start">ĐĂNG KÝ</h3>
            <p class="text-start text-muted">Tạo tài khoản mới</p>

            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Tên Đăng Nhập</label>
                    <input type="text"
                           class="form-control @(ViewData["UsernameError"] != null ? "is-invalid" : "")"
                           id="username"
                           name="username"
                           required
                           value="@(ViewData["EnteredUsername"] ?? "")" />
                    @if (ViewData["UsernameError"] != null)
                    {
                        <div class="invalid-feedback">
                            @ViewData["UsernameError"]
                        </div>
                    }
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Mật Khẩu</label>
                    <input type="password" class="form-control" id="password" name="password" required />
                </div>

                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Nhập Lại Mật Khẩu</label>
                    <input type="password"
                           class="form-control @(ViewData["PasswordError"] != null ? "is-invalid" : "")"
                           id="confirmPassword"
                           name="confirmPassword"
                           required />
                    @if (ViewData["PasswordError"] != null)
                    {
                        <div class="invalid-feedback">
                            @ViewData["PasswordError"]
                        </div>
                    }
                </div>

                <div class="form-check mb-3">
                    <input type="checkbox" class="form-check-input" id="showPassword" />
                    <label class="form-check-label" for="showPassword">Hiển Thị Mật Khẩu</label>
                </div>

                <div class="d-grid gap-2 mb-3">
                    <button type="submit" class="btn btn-custom">Đăng ký</button>
                </div>
            </form>

            <div class="d-grid gap-2">
                <a asp-controller="Home" asp-action="Login" class="btn btn-custom text-center">Quay lại đăng nhập</a>
            </div>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger mt-3 text-center">@ViewBag.Message</div>
            }
        </div>
    </div>

    <script>
        // Toggle password visibility
        document.getElementById('showPassword').addEventListener('change', function () {
            const pw = document.getElementById('password');
            const cpw = document.getElementById('confirmPassword');
            const type = this.checked ? 'text' : 'password';
            pw.type = type;
            cpw.type = type;
        });
    </script>
</body>
</html>
